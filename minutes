`timescale 1ns / 1ps

module minutes (
   input inc_minutes,
   input reset,
   output reg inc_hours,
   output [5:0] minutes
   );
   
   reg [5:0] min_ctr = 0;
   
   always @ (posedge inc_minutes or posedge reset) begin
       if(reset) begin
          min_ctr <= 0;
          inc_hours  <=0;
          end
       else begin
          if(min_ctr == 59) begin
              min_ctr <= 0;
              inc_hours  <=1;
              end
              
         else begin
         min_ctr <= min_ctr + 1;
         inc_hours <= 0;  //
            end
          end
    end
 
   assign minutes = min_ctr;
   
endmodule
